<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/9e8ff13473.js" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div class="container">
    <body>
      <header class="navbar navbar-fixed-top">
        <nav class="nav navbar-left"><%= link_to "Bookers", root_path %></nav>
        <nav>
          <ul class="nav navbar-nav navbar-right flex-row">
          <% if user_signed_in? %>
          <li class="mx-2">
            <i class="fas fa-home"></i>
            <%= link_to "Home", user_path(current_user.id) %>
          </li>
          <li class="mx-2">
            <i class="fas fa-users"></i>
            <%= link_to "Users", users_path %>
          </li>
          <li class="mx-2">
            <i class="fas fa-book-open"></i>
            <%= link_to "Books", books_path %>
          </li>
          <li class="mx-2">
            <i class="fas fa-sign-out-alt"></i>
            <%= link_to "logout", destroy_user_session_path, method: :delete %>
          </li>

        <% else %>
          <li class="mx-2">
            <i class="fas fa-home"></i>
            <%= link_to "Home", root_path %>
          </li>
          <li class="mx-2">
            <i class="fas fa-link"></i>
            <%= link_to "About", home_about_path %>
          </li>
          <li class="mx-2">
            <i class="fas fa-user-plus"></i>
            <%= link_to "sign up", new_user_registration_path %>
          </li>
          <li class="mx-2">
            <i class="fas fa-sign-in-alt"></i>
            <%= link_to "login", new_user_session_path %>
          </li>
        <% end %>
          </ul>
        </nav>

      </header>

    <% if notice %>
    ã€€<p><%= notice %></p>
    <% end %>
    <% if alert %>
      <p><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>

  <footer class="text-center">
    <p>CopyRight Infratop.inc</p>
  </footer>

  </div>
</html>
