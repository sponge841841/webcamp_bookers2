<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <% if @book.errors.any? %>
    <h2 class="warning"><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul class="warning">
      <% @book.errors.full_messages.each do |massage| %>
      <li><%= massage %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
